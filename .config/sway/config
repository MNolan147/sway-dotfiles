#
### Variables
#
# Logo key. Use Mod1 for Alt.
set $mod Mod4
# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l
# Your preferred terminal emulator
set $term /usr/local/bin/alacritty 
# Your preferred application launcher
# Note: pass the final command to swaymsg so that the resulting window can be opened
# on the original workspace that the command was run on.
set $menu wofi --show run --allow-images | xargs swaymsg exec --

include /etc/sway/config-vars.d/*
include "$HOME/.cache/wal/colors-sway"
include ~/.config/sway/keybinds

### Output configuration
#
# Default wallpaper (more resolutions are available in /usr/share/backgrounds/sway/output * bg ~/Documents/Game\ Images/Outer\ Wilds/background_image.png fill
output * bg ~/.cache/bgp/background.png fill
# Example configuration:
#
#   output HDMI-A-1 resolution 1920x1080 position 1920,0
#
# You can get the names of your outputs by running: swaymsg -t get_outputs

### Idle configuration
#
# Example configuration:
#
exec swayidle -w \
    timeout 300 'swaylock -f -i ~/.cache/bgp/lockscreen.png' \
    timeout 360 'swaymsg "output * dpms off"' \
    resume 'swaymsg "output * dpms on"' \
    before-sleep 'swaylock -f -i ~/.cache/bgp/lockscreen.png' 

#
# This will lock your screen after 300 seconds of inactivity, then turn off
# your displays after another 60 seconds, and turn your screens back on when
# resumed. It will also lock your screen before your computer goes to sleep.

### Input configuration
#
# Example configuration:
#
#   input "2:14:SynPS/2_Synaptics_TouchPad" {
#       dwt enabled
#       tap enabled
#       natural_scroll enabled
#       middle_emulation enabled
#   }
#
# You can get the names of your inputs by running: swaymsg -t get_inputs
# Read `man 5 sway-input` for more information about this section.
input * {
    xkb_layout "us"
    xkb_options "caps:swapescape,cpas:shiftlock,compose:ralt"
}

input type:touchpad {
    tap enabled
    natural_scroll enabled
}

input type:keyboard {
    repeat_delay 300
    repeat_rate 30
    xkb_model "pc105"
}
#
# Auto-start processes
#
    # Start background processes
    exec --no-startup-id pywalfox start
    exec --no-startup-id nm-applet
    exec --no-startup-id blueman-applet
    # Start foreground applications
    exec --no-startup-id firefox 
    exec --no-startup-id spotify
    exec --no-startup-id thunderbird
    exec --no-startup-id VirtualBoxVM --startvm "SCHOOL-WINDOWS-10" --start-paused
    
    focus_follows_mouse no
    focus_on_window_activation smart 
#
# Auto-move windows
#
    assign [app_id="firefox"] workspace $ws1
    assign [app_id="thunderbird"] workspace $ws4
    assign [class="VirtualBox Machine"] workspace $ws2
    assign [class="Spotify"] workspace $ws3
#
# Set Gaps
#
    default_border pixel 1

#    smart_gaps on
    smart_borders on
#    gaps inner  10
#    gaps vertical -5
#    gaps outer 1
#
# Theming
#
    # Font
    font pango:Inconsolata 13, DejaVu Sans Mono, Terminus 9

    # Colour Scheme
    # class                 border  bground text    indicator child_border
    #client.focused          304878 303060 FFFFFF 304878 306090
    #client.focused_inactive 604848 A89090 000000 604848   784830
    #client.unfocused        181830 180018 888888 181830   222222
    #client.urgent           906030 C09030 903018 906030   906030
    #client.placeholder      000000 0C0C0C FFFFFF 000000   0C0C0C

    # class                  bground     border  text        
    client.focused           $background $color2 $foreground 
    client.focused_inactive  $background $color4 $foreground 
    client.unfocused         $background $color0 $foreground 
    client.urgent            $background $color3 $foreground 

    client.background       $background 
bar {
    swaybar_command waybar
}

include /etc/sway/config.d/*
