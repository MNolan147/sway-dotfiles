### Key bindings
#
# Basics:
#
    # Start a terminal
    bindsym $mod+q exec $term 

    # Kill focused window
    bindsym $mod+Shift+q kill

    # Start your launcher
    bindsym --no-repeat $mod+e exec "killall $menu; $menu | xargs swaymsg exec --"
    bindsym --no-repeat $mod+Shift+e exec "killall $menu; $menu -S drun | xargs swaymsg exec --"

    # Drag floating windows
    floating_modifier $mod normal

    # Reload the configuration file
    bindsym $mod+Shift+c reload

    # Exit sway (logs you out of your Wayland session)
    bindsym $mod+Shift+x exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -b 'Yes, exit sway' 'swaymsg exit'

    # Lock screen 
    bindsym $mod+m exec "swaylock -f --effect-blur 10x3 -i ~/.config/wpg/.current"
    bindsym $mod+Shift+m exec systemctl suspend
#
# Moving around:
#
    # Move your focus around
    bindsym $mod+$left  focus left
    bindsym $mod+$down  focus down
    bindsym $mod+$up    focus up
    bindsym $mod+$right focus right

    # Move the focused window with the same, but add Shift
    bindsym $mod+Shift+$left  move left
    bindsym $mod+Shift+$down  move down
    bindsym $mod+Shift+$up    move up
    bindsym $mod+Shift+$right move right

    # Move focus to output
    bindsym $mod+Mod1+Shift+o focus left
    bindsym $mod+Mod1+o focus right
#
# Workspaces:
#
    # Set workspace names
    set $ws1 1: 
    set $ws2 2:
    set $ws3 3:
    set $ws4 4:@
    set $ws5 5:
    set $ws6 6:6
    set $ws7 7:7 
    set $ws8 8:8
    set $ws9 9:9
    set $ws10 10:10

    # Switch to workspace
    bindsym --no-repeat $mod+1 workspace $ws1
    bindsym --no-repeat $mod+2 workspace $ws2
    bindsym --no-repeat $mod+3 workspace $ws3
    bindsym --no-repeat $mod+4 workspace $ws4
    bindsym --no-repeat $mod+5 workspace $ws5
    bindsym --no-repeat $mod+f1 workspace $ws6
    bindsym --no-repeat $mod+f2 workspace $ws7
    bindsym --no-repeat $mod+f3 workspace $ws8
    bindsym --no-repeat $mod+f4 workspace $ws9
    bindsym --no-repeat $mod+f5 workspace $ws10
    
    # Move focused container to workspace
    bindsym --no-repeat $mod+Shift+1 move container to workspace $ws1
    bindsym --no-repeat $mod+Shift+2 move container to workspace $ws2
    bindsym --no-repeat $mod+Shift+3 move container to workspace $ws3
    bindsym --no-repeat $mod+Shift+4 move container to workspace $ws4
    bindsym --no-repeat $mod+Shift+5 move container to workspace $ws5
    bindsym --no-repeat $mod+Shift+f1 move container to workspace $ws6
    bindsym --no-repeat $mod+Shift+f2 move container to workspace $ws7
    bindsym --no-repeat $mod+Shift+f3 move container to workspace $ws8
    bindsym --no-repeat $mod+Shift+f4 move container to workspace $ws9
    bindsym --no-repeat $mod+Shift+f5 move container to workspace $ws10
    
    workspace_auto_back_and_forth yes
    bindsym $mod+o move workspace to output right 
    bindsym $mod+Shift+o move workspace to output left 
    bindsym --no-repeat $mod+Mod1+Space exec "echo 1 > /tmp/sovpipe"
    bindsym --release $mod+Mod1+Space exec "echo 0 > /tmp/sovpipe"

#
# Open commonly used programs
#
    bindsym --no-repeat $mod+w exec $term --session ~/.config/kitty/ranger_session --title "franger"
    #bindsym $mod+a exec qutebrowser
    bindsym --no-repeat $mod+a exec firefox
    bindsym --no-repeat $mod+s exec $term --session ~/.config/kitty/config_session
    bindsym --no-repeat $mod+d exec libreoffice

    bindsym --no-repeat $mod+Shift+w exec $term --session ~/.config/kitty/wpg_session --title "wpgterm"
    bindsym --no-repeat $mod+Shift+a exec ~/.local/bin/zathura
    bindsym --no-repeat $mod+Shift+s exec code
    bindsym --no-repeat $mod+Shift+d exec discord
#
# Audio control:
#
    # Use pactl to control volume
    bindsym XF86AudioRaiseVolume exec pamixer -ui 5
    bindsym XF86AudioLowerVolume exec pamixer -ud 5
    bindsym XF86AudioMute exec pamixer --toggle-mute
    bindsym XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle

    # Use playerctl to play and pause
    bindsym XF86AudioPlay exec "playerctl --player playerctld play-pause"
    bindsym XF86AudioPause exec "playerctl --player playerctld play-pause"
    bindsym XF86AudioNext exec "playerctl --player playerctld next"
    bindsym XF86AudioPrev exec "playerctl --player playerctld previous"

    # Connect Headphones
    bindsym --no-repeat $mod+6 echo -e 'connect B8:F1:2A:75:A1:65' | bluetoothctl
#
# Brightness control:
#
    # Use brightnessctl to controll backlight
    bindsym XF86MonBrightnessUp exec brightnessctl set 10%+
    bindsym XF86MonBrightnessDown exec brightnessctl set 10%-
#
# Layout stuff:
#
    # $mod+c or $mod+v, for horizontal and vertical splits
    bindsym $mod+c splith
    bindsym $mod+v splitv

    # Switch the current container between different layout styles
    bindsym $mod+z layout tabbed
    bindsym $mod+x layout toggle split

    # Make the current focus fullscreen
    bindsym --no-repeat $mod+f fullscreen
    
    # Hide waybar
    bindsym --no-repeat $mod+r exec killall -SIGUSR1 waybar 

    # Toggle the current focus between tiling and floating mode
    bindsym $mod+Shift+space floating toggle

    # Swap focus between the tiling area and the floating area
    bindsym $mod+space focus mode_toggle

    # Move focus to the parent container
    bindsym $mod+t focus parent
    bindsym $mod+Shift+t focus child
#
# Screenshots and screen recording
#

    bindsym --no-repeat $mod+p       exec grimshot --notify save active
    bindsym --no-repeat $mod+Shift+p exec grimshot --notify save area
    bindsym --no-repeat $mod+Alt+p  exec grimshot --notify save output
    bindsym --no-repeat $mod+Ctrl+p  exec grimshot --notify save window
#
# Scratchpad:
#
    # Sway has a "scratchpad", which is a bag of holding for windows.
    # You can send windows there and get them back later.

    # Move the currently focused window to the scratchpad
    bindsym --no-repeat $mod+Shift+minus move scratchpad

    # Show the next scratchpad window or hide the focused scratchpad window.
    # If there are multiple scratchpad windows, this command cycles through them.
    bindsym $mod+minus scratchpad show
#
# Resizing containers:
#
    bindsym $mod+Alt+$left resize shrink width 10px
    bindsym $mod+Alt+$down resize grow height 10px
    bindsym $mod+Alt+$up resize shrink height 10px
    bindsym $mod+Alt+$right resize grow width 10px

